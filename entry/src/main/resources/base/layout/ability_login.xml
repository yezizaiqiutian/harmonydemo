<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <TextField
        ohos:id="$+id:tv_username"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:bg_input"
        ohos:margin="10vp"
        ohos:text_alignment="vertical_center|right"
        ohos:text_size="20fp"/>

    <TextField
        ohos:id="$+id:tv_password"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:bg_input"
        ohos:margin="10vp"
        ohos:text_alignment="vertical_center|right"
        ohos:text_size="20fp"/>

    <Button
        ohos:id="$+id:btn_login"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:margin="10vp"
        ohos:text="登录"
        ohos:text_size="20fp"/>

</DirectionalLayout>