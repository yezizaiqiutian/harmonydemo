<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="100vp"
    ohos:width="match_parent"
    ohos:left_margin="10vp"
    ohos:right_margin="10vp">

    <Image
        ohos:id="$+id:iv_img"
        ohos:height="80vp"
        ohos:width="80vp"
        ohos:background_element="#00ff00"
        ohos:right_margin="10vp"
        ohos:vertical_center="true"/>

    <Text
        ohos:id="$+id:tv_title"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:align_top="$id:iv_img"
        ohos:right_of="$id:iv_img"
        ohos:text="哈哈哈哈哈哈"
        ohos:text_color="#000000"
        ohos:text_size="20fp"/>

    <Text
        ohos:id="$+id:tv_content"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:align_left="$id:tv_title"
        ohos:below="$id:tv_title"
        ohos:text="哈哈哈哈哈哈"
        ohos:text_color="#666666"
        ohos:text_size="18fp"/>

    <Component
        ohos:height="0.5vp"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:background_element="#000000"/>

</DependentLayout>