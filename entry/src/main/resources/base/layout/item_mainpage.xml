<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="100vp"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:left_margin="10fp"
    ohos:orientation="vertical"
    ohos:right_margin="10fp">

    <Text
        ohos:id="$+id:tv_title"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="哈哈哈哈哈哈"
        ohos:text_color="#000000"
        ohos:text_size="20fp"/>

    <Text
        ohos:id="$+id:tv_content"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="哈哈哈哈哈哈"
        ohos:text_color="#666666"
        ohos:text_size="18fp"
        ohos:weight="1"/>

    <Component
        ohos:height="0.5vp"
        ohos:width="match_parent"
        ohos:background_element="#000000"/>

</DirectionalLayout>