<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="200fp"
        ohos:width="match_parent"
        ohos:background_element="#ff0000"
        ohos:orientation="vertical">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="left"
            ohos:text="我是线性布局"
            ohos:text_size="20vp"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="right"
            ohos:text="我是线性布局"
            ohos:text_size="20vp"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="horizontal_center"
            ohos:text="我是线性布局"
            ohos:text_size="20vp"/>

    </DirectionalLayout>

    <DependentLayout
        ohos:height="match_parent"
        ohos:background_element="#00ff00"
        ohos:width="400fp">

        <Text
            ohos:id="$+id:dp_tv_1"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="我是相对布局"
            ohos:text_size="20vp"/>

        <Text
            ohos:id="$+id:dp_tv_2"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_right="true"
            ohos:text="我是相对布局"
            ohos:text_size="20vp"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:dp_tv_1"
            ohos:below="$id:dp_tv_2"
            ohos:text="我是相对布局"
            ohos:text_size="20vp"/>

    </DependentLayout>

</DirectionalLayout>